<!DOCTYPE subsection PUBLIC "urn:pubid:dita4publishers.sourceforge.net:doctypes:dita:subsection" "subsection.dtd">
<subsection
  id="subsection-id">
  <title>MathML</title>
  <body>
    <p>This topic contains MathML included in various ways</p>
    <section>
      <title>Inline MathML</title>
      <fig>
        <title>MathML using inline markup</title>
        <d4p_MathML>
          <m:math>
            <m:mrow>
              <m:mi>A</m:mi>
              <m:mo>=</m:mo>
              <m:mrow >
                <m:msubsup>
                  <m:mo>&#x0222B;</m:mo>
                  <m:mn>0</m:mn>
                  <m:mn>1</m:mn>
                </m:msubsup>
                <m:mfrac>
                  <m:mrow>
                    <m:mo >ln</m:mo>
                    <m:mrow>
                      <m:mo stretchy='false'>(</m:mo>
                      <m:mi>x</m:mi>
                      <m:mo>+</m:mo>
                      <m:mn>1</m:mn>
                      <m:mo stretchy='false'>)</m:mo>
                    </m:mrow>
                    <m:msqrt>
                      <m:mrow>
                        <m:msubsup>
                          <m:mi>x</m:mi>
                          <m:mrow></m:mrow>
                          <m:mn>2</m:mn>
                        </m:msubsup>
                        <m:mo>+</m:mo>
                        <m:mn>2</m:mn>
                        <m:mi>x</m:mi>
                        <m:mo>+</m:mo>
                        <m:mn>2</m:mn>
                      </m:mrow>
                    </m:msqrt>
                  </m:mrow>
                  <m:mrow>
                    <m:mi>x</m:mi>
                    <m:mo>+</m:mo>
                    <m:mn>1</m:mn>
                  </m:mrow>
                </m:mfrac>
                <m:mi>d</m:mi>
                <m:mi>x</m:mi>
              </m:mrow>
            </m:mrow>
          </m:math>
        </d4p_MathML>
      </fig>
    </section>
  </body>
</subsection>
